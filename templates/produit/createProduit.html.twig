{% extends 'basegeneral.html.twig' %}
{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add aproduit Backend produit</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Nom</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nomprod,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(f.nomprod,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Prix</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.prixprod,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.prixprod,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">image</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.imgprod,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.imgprod,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">quant</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.quantprod,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.quantprod,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">description</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.descprod,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.descprod,{'attr':{'class':'text-danger'}}) }}
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                        <button type="submit">ajouter</button>

                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>
{% endblock %}