{% extends 'baseback.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add  Entraineur Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Nom : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Prenom : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.prenom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.prenom,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Adresse : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.adresse,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Email : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.email,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Num√©ro : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.num,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.num,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Type d'Entraineur : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.type_e,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.type_e,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Date de realisation du contrat : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.date_contract_e,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.date_contract_e,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Dure de contrat :</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.dure_contract_e,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.dure_contract_e,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Login : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.username,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(f.username,{'attr':{'class':'text-danger'}}) }}

                    <br>

                    <label for="inputText" class="col-sm-4 col-form-label">password : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.plainPassword.first,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.plainPassword.first,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">rewrite password : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.plainPassword.second,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.plainPassword.second,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                        <button type="submit">Register!</button>

                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>
{% endblock %}