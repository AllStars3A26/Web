{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modify your data</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Fullname</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.fullname,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(f.fullname,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Adresse</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.adresse,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.email,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Num√©ro</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.num,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.num,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.desc_u,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.desc_u,{'attr':{'class':'text-danger'}}) }}
                    <br>
                    <label for="inputText" class="col-sm-4 col-form-label">Login</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.psudo,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(f.psudo,{'attr':{'class':'text-danger'}}) }}
                    <br>

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                        <button type="submit">update!</button>

                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>
{% endblock %}