        <td>{{ Cours.titre }}</td>
            <td>{{ Cours.nome }}</td>
            <td>{{ Cours.type }}</td>
 
             
                <td><a class="btn btn-warning" href="{{ path('supprimerCours',{'id':Cours.idCours}) }}" onclick="return confirm('Are you sure you want to delete this item')" >Delete</a>
                <a class="btn btn-info" href="{{ path('modifierCours',{'id':Cours.idCours}) }}"  onclick=return confirm('u sure?') > Update</a></td>
